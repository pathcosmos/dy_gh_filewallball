FROM ubuntu:22.04

# 환경 변수 설정
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=Asia/Seoul

# 시스템 패키지 업데이트 및 필요한 도구 설치
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-requests \
    jq \
    wget \
    git \
    vim \
    nano \
    htop \
    tree \
    unzip \
    zip \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/* \
    && python3 --version

# 작업 디렉토리 설정
WORKDIR /app

# 테스트 스크립트 복사
COPY test_full_workflow.sh /app/
RUN chmod +x /app/test_full_workflow.sh

# 대기 스크립트 생성
COPY wait_for_api.sh /app/
RUN chmod +x /app/wait_for_api.sh

# 간단한 테스트 스크립트 생성
COPY quick_test.sh /app/
RUN chmod +x /app/quick_test.sh

# Python 테스트 스크립트 복사
COPY test_simple.py /app/
RUN chmod +x /app/test_simple.py

# 메인 진입점 설정
ENTRYPOINT ["/bin/bash"]
